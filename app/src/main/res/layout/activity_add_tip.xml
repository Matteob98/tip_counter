<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundTint"
    tools:context=".AddTipActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarActivityAddTip"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolBarStyle"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalTipActivityAddTip"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:text="00,00"
        app:layout_constraintEnd_toStartOf="@+id/currencyActivityAddTip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarActivityAddTip" />

    <TextView
        android:id="@+id/currencyActivityAddTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:text="â‚¬"
        app:layout_constraintBottom_toBottomOf="@+id/totalTipActivityAddTip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarActivityAddTip" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignBounds"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/totalTipActivityAddTip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/titleActivityAddTip" >

        <Button
            android:id="@+id/buttonCommaAddTip"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:onClick="addTipButtonClick"
            android:text=","
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button0AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="0"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            android:id="@+id/buttonBackAddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="Back"
            android:layout_row="3"
            android:layout_column="2"/>

        <Button
            android:id="@+id/button9AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:id="@+id/button8AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:id="@+id/button7AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/button5AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="5"
            android:layout_row="1"
            android:layout_column="1"  />

        <Button
            android:id="@+id/button6AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="6"
            android:layout_row="1"
            android:layout_column="2"  />

        <Button
            android:id="@+id/button4AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="4"
            android:layout_row="1"
            android:layout_column="0"  />

        <Button
            android:id="@+id/button3AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:id="@+id/button2AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="2"
            android:layout_row="0"
            android:layout_column="1"  />

        <Button
            android:id="@+id/button1AddTip"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@color/white"
            android:onClick="addTipButtonClick"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="1"
            android:layout_row="0"
            android:layout_column="0"  />



    </GridLayout>

    <EditText
        android:id="@+id/titleActivityAddTip"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/Add_note"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/addButtonActivityAddTip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/addButtonActivityAddTip"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:src="@drawable/add_money"
        android:background="@null"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bannerAddTipActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerAddTipActivity"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8919261416525349/8758599915"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>